---
import { getCollection } from 'astro:content';
import PageLayout from '../../layouts/PageLayout.astro';

export async function getStaticPaths() {
  const especialidades = await getCollection('especialidades');
  return especialidades.map((entry) => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
---

<PageLayout
  title={entry.data.title}
  description={entry.data.description}
  breadcrumbItems={[
    { label: 'Especialidades', href: '/especialidades/' },
    { label: entry.data.title },
  ]}
>
  <div class="content-wrapper">
    <Content />
  </div>
</PageLayout>

<style>
  .content-wrapper {
    max-width: 800px;
    margin: 0 auto;
    font-size: 1.125rem;
    line-height: 1.8;
    color: var(--color-text);
  }

  /* Estilização do conteúdo Markdown */
  .content-wrapper :global(h2) {
    font-size: 1.75rem;
    color: var(--color-primary);
    margin-top: 3rem;
    margin-bottom: 1.5rem;
    font-family: var(--font-serif);
  }

  .content-wrapper :global(h2:first-child) {
    margin-top: 0;
  }

  .content-wrapper :global(h3) {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--color-text);
    margin-top: 2rem;
    margin-bottom: 1rem;
  }

  .content-wrapper :global(p) {
    margin-bottom: 1.5rem;
  }

  .content-wrapper :global(ul) {
    margin-bottom: 2rem;
    padding-left: 1.5rem;
  }

  .content-wrapper :global(li) {
    margin-bottom: 0.5rem;
  }

  /* Destaque para links (como o botão final) */
  .content-wrapper :global(a[href^="/agende"]) {
    display: inline-block;
    background-color: var(--color-primary);
    color: white;
    padding: 0.75rem 1.5rem;
    border-radius: 0.5rem;
    text-decoration: none;
    font-weight: 600;
    margin-top: 1rem;
    transition: background-color 0.2s;
  }

  .content-wrapper :global(a[href^="/agende"]:hover) {
    background-color: var(--color-primary-dark);
  }
</style>
