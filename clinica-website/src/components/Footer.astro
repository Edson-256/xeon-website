---
import clinic from '../data/clinic.json';

const currentYear = new Date().getFullYear();
---

<footer class="footer">
  <div class="footer__container">
    <!-- Informações de Contato -->
    <div class="footer__section">
      <h3 class="footer__heading">Contato</h3>
      <address class="footer__address">
        <p>{clinic.address.street}</p>
        {clinic.address.complement && <p>{clinic.address.complement}</p>}
        <p>{clinic.address.neighborhood} - {clinic.address.city}/{clinic.address.state}</p>
        <p>CEP: {clinic.address.postalCode}</p>
      </address>
      <p class="footer__contact">
        <a href={`tel:${clinic.contact.phone.replace(/\s/g, '')}`}>{clinic.contact.phone}</a>
      </p>
      <p class="footer__contact">
        <a href={`mailto:${clinic.contact.email}`}>{clinic.contact.email}</a>
      </p>
    </div>

    <!-- Horários -->
    <div class="footer__section">
      <h3 class="footer__heading">Horário de Funcionamento</h3>
      <p>{clinic.hours.weekdays}</p>
      <p>{clinic.hours.saturday}</p>
    </div>

    <!-- Links Úteis -->
    <div class="footer__section">
      <h3 class="footer__heading">Links Úteis</h3>
      <nav class="footer__nav" aria-label="Links do rodapé">
        <ul class="footer__nav-list">
          <li><a href="/sobre/">Sobre</a></li>
          <li><a href="/especialidades/">Especialidades</a></li>
          <li><a href="/prepare-se/">Prepare-se para sua Consulta</a></li>
          <li><a href="/guia-acompanhante/">Guia do Acompanhante</a></li>
          <li><a href="/politica-privacidade/">Política de Privacidade</a></li>
        </ul>
      </nav>
    </div>
  </div>

  <!-- Dados CFM Obrigatórios - Resolução 2336/2023 -->
  <div class="footer__compliance">
    <div class="footer__compliance-container">
      <div class="footer__doctor">
        <p><strong>{clinic.doctor.name}</strong></p>
        <p>{clinic.doctor.crm} | {clinic.doctor.rqe} - {clinic.doctor.specialty}</p>
      </div>
      <div class="footer__company">
        <p>{clinic.company.legalName}</p>
        <p>CNPJ: {clinic.company.cnpj}</p>
      </div>
    </div>
  </div>

  <!-- Copyright -->
  <div class="footer__copyright">
    <p>&copy; {currentYear} {clinic.name}. Todos os direitos reservados.</p>
    <p class="footer__privacy">
      <a href="/politica-privacidade/">Política de Privacidade</a>
    </p>
  </div>
</footer>

<style>
  .footer {
    background: var(--color-surface-alt);
    border-top: 1px solid var(--color-border);
    margin-top: auto;
  }

  .footer__container {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 3rem 1.5rem;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
  }

  .footer__heading {
    font-size: 1rem;
    font-weight: 600;
    color: var(--color-text);
    margin: 0 0 1rem 0;
  }

  .footer__section {
    color: var(--color-text-secondary);
    font-size: 0.9375rem;
    line-height: 1.6;
  }

  .footer__section p {
    margin: 0.25rem 0;
  }

  .footer__address {
    font-style: normal;
    margin-bottom: 1rem;
  }

  .footer__contact a {
    color: var(--color-primary);
    text-decoration: none;
  }

  .footer__contact a:hover {
    text-decoration: underline;
  }

  .footer__nav-list {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .footer__nav-list li {
    margin: 0.5rem 0;
  }

  .footer__nav-list a {
    color: var(--color-text-secondary);
    text-decoration: none;
  }

  .footer__nav-list a:hover {
    color: var(--color-primary);
  }

  /* Dados CFM - Destaque visual para compliance */
  .footer__compliance {
    background: var(--color-surface);
    border-top: 1px solid var(--color-border);
    border-bottom: 1px solid var(--color-border);
    padding: 1.5rem 0;
  }

  .footer__compliance-container {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 0 1.5rem;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 2rem;
    text-align: center;
  }

  .footer__doctor,
  .footer__company {
    font-size: 0.875rem;
    color: var(--color-text-secondary);
  }

  .footer__doctor p,
  .footer__company p {
    margin: 0.25rem 0;
  }

  .footer__copyright {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 1.5rem;
    text-align: center;
    font-size: 0.8125rem;
    color: var(--color-text-muted);
  }

  .footer__copyright p {
    margin: 0.25rem 0;
  }

  .footer__privacy a {
    color: var(--color-text-muted);
    text-decoration: underline;
  }

  @media (max-width: 768px) {
    .footer__compliance-container {
      flex-direction: column;
      gap: 1rem;
    }
  }
</style>
