---
import clinic from '../data/clinic.json';

const currentYear = new Date().getFullYear();
---

<footer class="bg-gray-50 border-t border-gray-200 mt-auto">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 mb-8">
      
      <!-- Contato -->
      <div>
        <h3 class="text-sm font-semibold text-gray-900 uppercase tracking-wider mb-4">Contato</h3>
        <address class="not-italic text-sm text-gray-600 space-y-2">
          <p class="font-medium text-gray-900">{clinic.name}</p>
          <p>{clinic.address.street}</p>
          {clinic.address.complement && <p>{clinic.address.complement}</p>}
          <p>{clinic.address.neighborhood}, {clinic.address.city} - {clinic.address.state}</p>
          <p>CEP: {clinic.address.postalCode}</p>
          
          <div class="mt-4 space-y-1">
            <p>
              <a href={`tel:${clinic.contact.phone.replace(/[^0-9]/g, '')}`} class="hover:text-red-700 transition-colors">
                <span class="font-semibold">Tel:</span> {clinic.contact.phone}
              </a>
            </p>
            <p>
              <a href={`mailto:${clinic.contact.email}`} class="hover:text-red-700 transition-colors">
                <span class="font-semibold">Email:</span> {clinic.contact.email}
              </a>
            </p>
          </div>
        </address>
      </div>

      <!-- Horários -->
      <div>
        <h3 class="text-sm font-semibold text-gray-900 uppercase tracking-wider mb-4">Horário de Atendimento</h3>
        <div class="text-sm text-gray-600 space-y-2">
          <p>{clinic.hours.weekdays}</p>
          <p>{clinic.hours.saturday}</p>
          <p class="text-gray-400 mt-2 text-xs">Atendimento com hora marcada.</p>
        </div>
      </div>

      <!-- Links -->
      <div>
        <h3 class="text-sm font-semibold text-gray-900 uppercase tracking-wider mb-4">Links Rápidos</h3>
        <ul class="space-y-2">
          <li><a href="/sobre/" class="text-sm text-gray-600 hover:text-red-700 transition-colors">Sobre Nós</a></li>
          <li><a href="/especialidades/" class="text-sm text-gray-600 hover:text-red-700 transition-colors">Especialidades</a></li>
          <li><a href="/prepare-se/" class="text-sm text-gray-600 hover:text-red-700 transition-colors">Prepare-se para Consulta</a></li>
          <li><a href="/guia-acompanhante/" class="text-sm text-gray-600 hover:text-red-700 transition-colors">Guia do Acompanhante</a></li>
        </ul>
      </div>

      <!-- Agendamento / Mapa -->
      <div>
        <h3 class="text-sm font-semibold text-gray-900 uppercase tracking-wider mb-4">Localização</h3>
        <div class="rounded-lg h-32 overflow-hidden mb-4">
          <iframe
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3656.5!2d-52.3833!3d-24.0458!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x94ecd5f0a8b8b8b9%3A0x0!2sRua%20Roberto%20Brzezinski%2C%202052%20-%20Campo%20Mour%C3%A3o%2C%20PR!5e0!3m2!1spt-BR!2sbr!4v1707500000000!5m2!1spt-BR!2sbr"
            width="100%"
            height="100%"
            style="border:0;"
            allowfullscreen=""
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"
            title="Localização da Clínica">
          </iframe>
        </div>
        <a href="/agende/" class="inline-flex items-center justify-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-red-700 hover:bg-red-800 shadow-sm w-full transition-colors">
          Agendar Consulta
        </a>
      </div>
    </div>

    <!-- Dados Legais (Compliance CFM) -->
    <div class="border-t border-b border-gray-200 py-6 bg-white rounded-lg px-4 my-8 shadow-sm">
      <div class="flex flex-col md:flex-row justify-between items-center text-center md:text-left gap-4">
        <div>
          <p class="text-sm font-bold text-gray-900">{clinic.doctor.name}</p>
          <p class="text-xs text-gray-500">{clinic.doctor.crm} | {clinic.doctor.rqe}</p>
          <p class="text-xs text-gray-500 uppercase tracking-wide mt-1">{clinic.doctor.specialty}</p>
        </div>
        <div class="text-xs text-gray-400">
          <p>{clinic.company.legalName}</p>
          <p>CNPJ: {clinic.company.cnpj}</p>
        </div>
      </div>
    </div>

    <!-- Copyright -->
    <div class="flex flex-col md:flex-row justify-between items-center pt-4">
      <p class="text-xs text-gray-400">
        &copy; {currentYear} {clinic.name}. Todos os direitos reservados.
      </p>
      <div class="flex space-x-6 mt-4 md:mt-0">
        <a href="/politica-privacidade/" class="text-xs text-gray-400 hover:text-gray-500">
          Política de Privacidade
        </a>
      </div>
    </div>
  </div>
</footer>