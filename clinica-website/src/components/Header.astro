---
import clinic from '../data/clinic.json';

interface Props {
  currentPath?: string;
}

const { currentPath = '' } = Astro.props;

const navItems = [
  { href: '/', label: 'Início' },
  { href: '/sobre/', label: 'Sobre' },
  { href: '/especialidades/', label: 'Especialidades' },
  { href: '/prepare-se/', label: 'Prepare-se' },
  { href: '/glossario/', label: 'Glossário' },
  { href: '/agende/', label: 'Agende', isHighlighted: true },
];

function isActive(href: string): boolean {
  if (href === '/') return currentPath === '/';
  return currentPath.startsWith(href);
}
---

<header class="header">
  <div class="header__container">
    <a href="/" class="header__logo" aria-label="Página inicial">
      <span class="header__logo-text">{clinic.name}</span>
    </a>

    <button
      class="header__menu-toggle"
      aria-label="Abrir menu"
      aria-expanded="false"
      aria-controls="main-nav"
    >
      <span class="header__menu-icon"></span>
    </button>

    <nav id="main-nav" class="header__nav" aria-label="Navegação principal">
      <ul class="header__nav-list">
        {navItems.map((item) => (
          <li class="header__nav-item">
            <a
              href={item.href}
              class:list={[
                'header__nav-link',
                { 'header__nav-link--active': isActive(item.href) },
                { 'header__nav-link--cta': item.isHighlighted }
              ]}
              aria-current={isActive(item.href) ? 'page' : undefined}
            >
              {item.label}
            </a>
          </li>
        ))}
      </ul>
    </nav>
  </div>
</header>

<style>
  .header {
    background: var(--color-surface);
    border-bottom: 1px solid var(--color-border);
    position: sticky;
    top: 0;
    z-index: 100;
  }

  .header__container {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 1rem 1.5rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 2rem;
  }

  .header__logo {
    text-decoration: none;
    color: var(--color-primary);
  }

  .header__logo-text {
    font-size: 1.25rem;
    font-weight: 600;
  }

  .header__menu-toggle {
    display: none;
    background: none;
    border: none;
    padding: 0.5rem;
    cursor: pointer;
  }

  .header__menu-icon {
    display: block;
    width: 24px;
    height: 2px;
    background: var(--color-text);
    position: relative;
  }

  .header__menu-icon::before,
  .header__menu-icon::after {
    content: '';
    display: block;
    width: 24px;
    height: 2px;
    background: var(--color-text);
    position: absolute;
    left: 0;
  }

  .header__menu-icon::before {
    top: -7px;
  }

  .header__menu-icon::after {
    top: 7px;
  }

  .header__nav-list {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .header__nav-link {
    display: block;
    padding: 0.5rem 1rem;
    text-decoration: none;
    color: var(--color-text-secondary);
    font-size: 0.9375rem;
    border-radius: 0.375rem;
    transition: color 0.2s, background 0.2s;
  }

  .header__nav-link:hover {
    color: var(--color-primary);
    background: var(--color-surface-hover);
  }

  .header__nav-link--active {
    color: var(--color-primary);
    font-weight: 500;
  }

  .header__nav-link--cta {
    background: var(--color-primary);
    color: white;
  }

  .header__nav-link--cta:hover {
    background: var(--color-primary-dark);
    color: white;
  }

  @media (max-width: 768px) {
    .header__menu-toggle {
      display: block;
    }

    .header__nav {
      display: none;
      position: absolute;
      top: 100%;
      left: 0;
      right: 0;
      background: var(--color-surface);
      border-bottom: 1px solid var(--color-border);
      padding: 1rem;
    }

    .header__nav--open {
      display: block;
    }

    .header__nav-list {
      flex-direction: column;
      align-items: stretch;
    }

    .header__nav-link {
      padding: 0.75rem 1rem;
    }
  }
</style>

<script>
  const toggle = document.querySelector('.header__menu-toggle');
  const nav = document.querySelector('.header__nav');

  toggle?.addEventListener('click', () => {
    const isOpen = nav?.classList.toggle('header__nav--open');
    toggle.setAttribute('aria-expanded', String(isOpen));
  });
</script>
